<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h1 class="h3">Data for A specific Region</h1>
        </div>
        <div class="col-3"></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <p> <strong>{{name}}</strong> has made A total of <strong>R {{totIncome}} out of {{numOfTrips}}
                    trips.</strong> </p>
        </div>
        <div class="col-2"></div>
    </div>
</div>
<div class="container-fluid">

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <table class="table">
                <tr>
                    <th>Region Name</th>
                    <th>Region Total Income</th>
                    <th>Trip Count</th>


                </tr>

                <tr>

                    <td> {{name}} </td>
                    <td> {{totIncome}} </td>
                    <td> {{numOfTrips}} </td>
                </tr>

            </table>


        </div>
        <div class="col-3"></div>
    </div>


</div>



<div class="container">
    <div class="row">
        <div class="col-3"></div>

        <div class="col-3">
            <form action="/regionInfo/{{name}}/{{id}}" method="get">
            <select name="{{name}}" value="" id="">
                <option value="">choose A region</option>
                {{#each opt}}
                <option hidden> {{id}} </option>
                <option value="{{id}}"> {{name}} </option>
                {{/each}}
            </select>
            <input type="submit" value="Pick Pegion">
            </form>
        </div>

        <div class="col-3">


        </div>
        <div class="col-3"></div>
    </div>
</div>